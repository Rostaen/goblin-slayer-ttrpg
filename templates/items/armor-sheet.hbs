<form class="{{#each data.options.classes as |class id|}}{{class}} {{/each}} {{data.item.type}} grid grid-5col" autocomplete="off">
    <div class="grid-span-5">
        <span class="top-info grid grid-2col">
			<span class="name">
				<label for="armorName">{{localize config.common.nam}}:</label>
				<input id="armorName" name="name" type="text" value="{{data.item.name}}" />
			</span>
			<span class="type">
				<label for="armorType">{{localize config.common.typ}}:</label>
				<input id="armorType" name="system.type" type="text" value="{{gear.type}}" />
			</span>
        </span>
    </div>
	<img src="{{data.item.img}}" data-edit="img" title="{{data.item.name}}" />
	<div class="grid-span-4">
		<div class="grid grid-2col">
			<span class="score">
				<label for="armorScore">{{localize config.armor.sco}}:</label>
				<input id="armorScore" name="system.score" type="text" value="{{numberFormat gear.score decimals=0 sign=true}}" data-dtype="Number" />
			</span>
			<span class="dodge">
				<label for="armorDodge">{{localize config.armor.dod}}:</label>
				<input id="armorDodge" name="system.dodge" type="text" value="{{numberFormat gear.dodge decimals=0 sign=true}}" data-dtype="Number" />
			</span>
			<span class="move">
				<label for="armorMove">{{localize config.armor.mov}}:</label>
				<input id="armorMove" name="system.move" type="text" value="{{numberFormat gear.move decimals=0 sign=true}}" data-dtype="Number" />
			</span>
			<span class="stealth">
				<label for="armorStealth">{{localize config.common.ste}}:</label>
				<select name="system.stealth">
					{{#select gear.stealth}}
						{{#each config.armor.stealth as |number id|}}
							<option value="{{number}}">{{id}}</option>
						{{/each}}
					{{/select}}
				</select>
			</span>
			<span class="value">
				<label for="armorValue">{{localize config.common.val}}:</label>
				<input id="armorValue" name="system.value" type="text" value="{{gear.value}}" data-dtype="Number" />
			</span>
		</div>
	</div>
	<span class="effects grid-span-5">
		<label for="armorEffects">{{localize config.common.eff}}:</label>
        {{editor gear.effects target="system.effects" button=true engine="prosemirror"}}
	</span>
	<span class="comments grid-span-5">
        {{editor gear.comment target="system.comment" button=true engine="prosemirror"}}
	</span>
</form>
