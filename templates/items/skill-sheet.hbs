<form class="{{cssClass}}{{data.item.type}} grid grid-5col" autocomplete="off">
    <img src="{{data.item.img}}" data-edit="img" title="{{data.item.name}}" />
    <span class="top-info grid-span-4">
        <span class="name">
            <label for="skillName">{{localize config.common.nam}}:</label>
            <input id="skillName" name="name" type="text" value="{{data.item.name}}" />
        </span>
        <span class="prereq">
            <label for="skillPrereq">{{localize config.skill.pre}}:</label>
            <textarea name="system.prereq">{{gear.prereq}}</textarea>
            {{!-- {{editor gear.prereq target="system.prereq" button=true owner=owner}} --}}
        </span>
        <span class="switch-container">
            <span class="switch-label">{{localize config.skill.gen}}</span>
            <label class="switch">
                <input type="checkbox" data-key="type" id="skill-switch" name="gear.type" {{checked gear.type}} />
                <span class="slider"></span>
            </label>
            <span class="switch-label">{{localize config.skill.adv}}</span>
        </span>
    </span>
    <span class="grid-span-5 description">
        <label for="itemDescription">{{localize config.common.des}}:</label>
		<textarea name="system.comment">{{gear.comment}}</textarea>
        {{!-- {{editor gear.comment target="system.comment" button=true owner=owner}} --}}
    </span>
    <h2 class="grid-span-5">{{localize config.common.eff}} of {{data.item.name}}</h2>

    <h4>{{localize 'gs.gear.skills.gra'}}</h4>
    <h4 class="grid-span-4">{{localize config.common.eff}}</h4>

    <span class="effects" for="skillBeginner">{{localize config.skill.beg}}:</span>
    <textarea class="grid-span-4" name="system.beginner">{{gear.beginner}}</textarea>
    {{!-- <span class="grid-span-4">{{editor gear.beginner target="system.beginner" button=true owner=owner}}</span> --}}

    <span class="effects" for="skillIntermediate">{{localize config.skill.int}}:</span>
    <textarea class="grid-span-4" name="system.intermediate">{{gear.intermediate}}</textarea>
    {{!-- <span class="grid-span-4">{{editor gear.intermediate target="system.intermediate" button=true owner=owner}}</span> --}}

    <span class="effects" for="skillExpert">{{localize config.skill.exp}}:</span>
    <textarea class="grid-span-4" name="system.expert">{{gear.expert}}</textarea>
    {{!-- <span class="grid-span-4">{{editor gear.expert target="system.expert" button=true owner=owner}}</span> --}}
    {{#if gear.type}}
    <span class="effects" for="skillMaster">{{localize config.skill.mas}}:</span>
    <textarea class="grid-span-4" name="system.master">{{gear.master}}</textarea>
    {{!-- <span class="grid-span-4">{{editor gear.master target="system.master" button=true owner=owner}}</span> --}}

    <span class="effects" for="skillLegend">{{localize config.skill.leg}}:</span>
    <textarea class="grid-span-4" name="system.legend">{{gear.legend}}</textarea>
    {{!-- <span class="grid-span-4">{{editor gear.legend target="system.legend" button=true owner=owner}}</span> --}}
    {{/if}}
</form>
{{log gear}}
