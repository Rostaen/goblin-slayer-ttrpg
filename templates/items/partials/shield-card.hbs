<div class="grid grid-10col">
    <div class="shield-card item item-list genSkillContainer grid-span-9" data-itemid="{{_id}}" data-actorid="{{data1.actor._id}}">
        <div class="reveal-rollable grid grid-9col contextMenu genSkills" data-id="{{_id}}" data-contextType="{{type}}">
            <img data-itemid="{{_id}}"  class="block player" src="{{img}}" title="{{name}}" />
            <div class="name grid-span-3">{{name}}</div>
            <div class="actorRolls blockMod grid-span-2">{{numberFormat system.mod decimals=0 sign=true}}</div>
            <div class="blockScore grid-span-2">{{numberFormat system.score decimals=0 sign=false}}</div>
            <div class="stealth">{{system.stealth}}</div>
            <input type="hidden" value="{{system.type}}" class="type">
        </div>
    </div>
    <input type="checkbox" name="system.equip" class="equipGear" data-itemid="{{_id}}" {{#if system.equip}}checked{{/if}}>
</div>
