<div class="weapon-card item item-list genSkillContainer" data-itemid="{{_id}}" data-actorid="{{data1.actor._id}}">
    <div class="reveal-rollable grid grid-10col contextMenu genSkills" data-id="{{_id}}" data-contextType="{{type}}">
        <img class="toHit player" src="{{img}}" title="{{name}}" data-itemid="{{_id}}" title="{{localize 'gs.dialog.actorSheet.itemsTab.toHit'}}" />
        <div class="name grid-span-4" >{{name}}</div>
        <div class="hitMod grid-span-2">{{numberFormat system.hitMod decimals=0 sign=true}}</div>
        <div class="range">{{system.range}}</div>
        <div class="power grid-span-2">{{system.power}}</div>
        <input type="hidden" value="{{system.type}}" class="type">
        <input type="hidden" value="{{system.use}}" class="weaponUse">
        <input type="hidden" value="{{system.attribute}}" class="weaponAttr">
    </div>
</div>
