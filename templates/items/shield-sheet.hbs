<form class="{{#each data.options.classes as |class id|}}{{class}} {{/each}} {{data.item.type}} grid grid-5col" autocomplete="off">
    <div class="grid-span-5">
        <span class="top-info grid grid-2col">
            <span class="name">
                <label for="shieldName">{{localize config.common.nam}}:</label>
                <input id="shieldName" name="name" type="text" value="{{data.item.name}}" />
            </span>
            <span class="type">
                <label for="shieldType">{{localize config.common.typ}}:</label>
                <input id="shieldType" name="system.type" type="text" value="{{gear.type}}" />
            </span>
        </span>
    </div>
	<img src="{{data.item.img}}" data-edit="img" title="{{data.item.name}}" />
	<div class="grid-span-4">
		<div class="grid grid-2col">
			<span class="mod">
				<label for="shieldMod">{{localize config.shield.mod}}:</label>
				<input id="shieldMod" name="system.mod" type="text" value="{{numberFormat gear.mod decimals=0 sign=true}}" data-dtype="Number" />
			</span>
			<span class="score">
				<label for="shieldScore">{{localize config.shield.sco}}:</label>
				<input id="shieldScore" name="system.score" type="text" value="{{numberFormat gear.score decimals=0 sign=true}}" data-dtype="Number" />
			</span>
			<span class="stealth">
				<label for="shieldStealth">{{localize config.common.ste}}:</label>
				<select name="system.stealth" data-dtype="Number">
					{{#each config.armor.stealth as |label key|}}
						<option value="{{label}}" {{#if (eq label ../item.system.stealth)}}selected{{/if}}>
							{{key}} {{label}}
						</option>
					{{/each}}
				</select>
			</span>
			<span class="value">
				<label for="shieldValue">{{localize config.common.val}}:</label>
				<input id="shieldValue" name="system.value" type="text" value="{{gear.value}}" data-dtype="Number" />
			</span>
		</div>
	</div>
	<span class="effects grid-span-5">
		<h2 for="shieldEffects">{{localize config.common.eff}}:</h2>
		<div class="grid grid-3col">
			<div class="wELeft">
				<div class="grid grid-6col">
					<input class="effectCheckbox" type="checkbox" name="system.effect.checked.0" {{checked gear.effect.checked.[0]}}><div class="effectName grid-span-5">{{localize 'gs.gear.weapons.effects.nThrow'}}</div>
				</div>
			</div>
			<div class="wEMiddle">
				<div class="grid grid-6col">
					<input class="effectCheckbox" type="checkbox" name="system.effect.checked.1" {{checked gear.effect.checked.[1]}}><div class="effectName grid-span-4">{{localize 'gs.gear.weapons.effects.parry'}}</div><input class="effectValue" type="text" name="system.effect.parry" value="{{gear.effect.parry}}" data-dtype="Number">
				</div>
			</div>
			<div class="wERight">
				<div class="grid grid-6col">
				</div>
			</div>
		</div>
		{{editor data.enrichedEffects target="system.effects" button=true engine="prosemirror"}}
	</span>
	{{!-- <span class="comments grid-span-5">
		{{editor gear.comment target="system.comment" button=true engine="prosemirror"}}
	</span> --}}
</form>
