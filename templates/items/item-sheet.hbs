<form class="{{cssClass}}{{data.item.type}} grid grid-5col" autocomplete="off">
    <div class="grid-span-5">
        <span class="top-info grid grid-2col">
            <span class="name">
                <label for="itemName">{{localize 'gs.gear.common.nam'}}:</label>
                <input id="itemName" name="name" type="text" value="{{data.item.name}}" />
            </span>
            <span class="value">
                <label for="itemValue">{{localize config.common.val}}:</label>
                <input id="itemValue" name="system.value" type="text" value="{{gear.value}}"  data-dtype="Number" />
            </span>
        </span>
    </div>
	<img src="{{data.item.img}}" data-edit="img" title="{{data.item.name}}" />
	<span class="comments grid-span-4">
		<label for="itemDescription">{{localize config.common.des}}:</label>
		{{!-- <textarea name="system.effects" >{{gear.effects}}</textarea> --}}
		{{editor gear.effects target="system.effects" button=true editable=true }}
	</span>
</form>
{{log data}}
