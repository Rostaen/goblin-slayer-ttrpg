<div class="sidebar">
    <h2>{{localize config.character.status}}</h2>
    <div class="status grid grid-3col">
        <label class="grid-span-2">{{localize config.character.wounds}}: </label>
        <input type="text" name="system.lifeForce.min" value="{{actor.lifeForce.min}}" data-dtype="Number" />
        <div class="grid-span-3">
            <div class="grid grid-4col">
                <label>{{localize config.common.life}}: </label>
                <input type="text" name="system.lifeForce.current" value="{{actor.lifeForce.current}}" data-dtype="Number">
                <label>2x: </label>
                {{!-- 2x Life Force is disabled as game will calculate this --}}
                <input type="text" name="system.lifeForce.max" value="{{actor.lifeForce.current}}" data-dtype="Number" disabled>
            </div>
        </div>
        <label class="grid-span-2">{{localize config.common.move}}: </label>
        <input type="text" name="system.move" value="{{actor.move}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.common.spRe}}: </label>
        {{!-- Spell Resistance disabled as game will calculate this --}}
        <input type="text" name="system.spellRes" value="{{actor.spellRes}}" data-dtype="Number" disabled>
    </div>
    <h2>{{localize config.character.experience.exp}}</h2>
    <div class="experience grid grid-3col">
        <label class="grid-span-2">{{localize config.character.experience.cum}}: </label>
        <input type="text" name="system.xp.cumulative" value="{{actor.xp.cumulative}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.cur}}: </label>
        <input type="text" name="system.xp.current" value="{{actor.xp.current}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.adv}}: </label>
        <input type="text" name="system.advancePoints" value="{{actor.advancePoints}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.lvl}}: </label>
        <input type="text" name="system.levels.adventurer" value="{{actor.levels.adventurer}}" data-dtype="Number">
    </div>
    <h2>{{localize config.character.fatW}}</h2>
    <div class="fatigue grid grid-7col">
        {{!-- Rank 1 --}}
        <input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><div class="ex"><input type="checkbox" name="" disabled/></div><label class="rank">1</label>
        {{!-- Rank 2 --}}
        <div></div><input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><div class="ex"><input type="checkbox" name="" disabled/></div><label class="rank">2</label>
        {{!-- Rank 3 --}}
        <div></div><div></div><input type="checkbox" name="" /><input type="checkbox" name="" /><input type="checkbox" name="" /><div class="ex"><input type="checkbox" name="" disabled/></div><label class="rank">3</label>
        {{!-- Rank 4 --}}
        <div></div><div></div><div></div><input type="checkbox" name="" /><input type="checkbox" name="" /><div class="ex"><input type="checkbox" name="" disabled/></div><label class="rank">4</label>
        {{!-- Rank 5 --}}
        <div></div><div></div><div></div><div></div><input type="checkbox" name="" /><div class="ex"><input type="checkbox" name="" disabled/></div><label class="rank">5</label>
    </div>
    <h2>{{localize config.character.attr}}</h2>
    <div class="attrition grid grid-3col">
        <button class="minus">
            <i class="fa-regular fa-square-minus fa-2x"></i>
        </button>
        <input type="text" name="system.attrition" value="{{actor.attrition}}" data-dtype="Number" disabled>
        <button class="plus">
            <i class="fa-regular fa-square-plus fa-2x"></i>
        </button>
    </div>
</div>
