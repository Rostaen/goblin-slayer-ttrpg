<div class="sidebar">
    <h2>{{localize config.character.status}}</h2>
    <div class="status grid grid-3col">
        <label class="grid-span-2">{{localize config.character.wounds}}</label>
        <input type="text" name="system.lifeForce.min" value="{{actor.system.lifeForce.min}}" data-dtype="Number" />
        <div class="grid-span-3">
            <div class="grid grid-4col">
                <label>{{localize config.common.life}}</label>
                <input type="text" name="system.lifeForce.current" value="{{actor.system.lifeForce.current}}" data-dtype="Number">
                <label>2x</label>
                {{!-- 2x Life Force is disabled as game will calculate this --}}
                <input type="text" name="system.lifeForce.max" value="{{actor.system.lifeForce.max}}" data-dtype="Number" disabled>
            </div>
        </div>

        <label class="grid-span-2">{{localize config.common.move}}</label>
        <input type="text" name="system.move" value="{{actor.system.move}}" data-dtype="Number">

        <label class="grid-span-2">{{localize config.common.modMove}}</label>
        <input type="text" name="system.modMove" value="{{actor.system.modMove}}" data-dtype="Number" disabled>

        <label class="grid-span-2">{{localize config.common.spRe}}</label>
        {{!-- Spell Resistance disabled as game will calculate this --}}
        <input type="text" name="system.spellRes" value="{{actor.system.spellRes}}" data-dtype="Number" disabled>
    </div>
    <h2>{{localize config.character.experience.exp}}</h2>
    <div class="experience grid grid-3col">
        <label class="grid-span-2">{{localize config.character.experience.cum}}</label>
        <input type="text" name="system.xp.cumulative" value="{{actor.system.xp.cumulative}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.cur}}</label>
        <input type="text" name="system.xp.current" value="{{actor.system.xp.current}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.adv}}</label>
        <input type="text" name="system.advancePoints" value="{{actor.system.advancePoints}}" data-dtype="Number">
        <label class="grid-span-2">{{localize config.character.experience.lvl}}</label>
        <input type="text" name="system.levels.adventurer" value="{{actor.system.levels.adventurer}}" data-dtype="Number">
    </div>
    <h2>{{localize config.character.money.money}}</h2>
    <div class="money grid grid-2col">
        <label>{{localize config.character.money.gold}}</label>
        <input type="text" name="system.money.gold" value="{{actor.system.money.gold}}" data-dtype="Number">
        <label>{{localize config.character.money.silv}}</label>
        <input type="text" name="system.money.silv" value="{{actor.system.money.silv}}" data-dtype="Number">
        <label>{{localize config.character.money.bron}}</label>
        <input type="text" name="system.money.bron" value="{{actor.system.money.bron}}" data-dtype="Number">
    </div>
</div>
